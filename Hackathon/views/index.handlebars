{{#if user}}


<div class="nav mb-2 mt-2">
    <div class="card-header bg-dark text-white mt-2 mb-2 shadow  rounded ">
        <h3 class="card-title"> Selecione Abaixo um de nossos Produtos </h3>
    </div>


</div>

<div class="row">
    {{#each produtos}}
    <div class="col-md-3 p-4">
        <div class="card  shadow mb-2 rounded-top" style="margin:0 auto;border-radius: 16px">
            <div class="card-header  bg-dark text-white text-center  p-2">
                <h5 class="">{{categoria}}</h5>
            </div>
            <div class="card-body p-2">
                <div class="row">
                    <div class="col-md">
                        <p class="card-text">Nome : {{nome_produto}}</p>
                        <p class="card-text">Cor : {{descricao.[0].cor}}</p>
                        <p class="card-text">Tamanho : {{descricao.[0].tamanho}}</p>
                        <p class="card-text">Preço : {{descricao.[0].preco}}</p>
                    </div>
                    <div class="col-md">
                        <img src="/img/{{image.[0]}}" width="100" height="75" alt="">
                    </div>
                </div>
            </div>
            <div class="card-footer bg-dark text-center">
                <div class="row">
                    <div class="col-md-12 p-1">
                        {{!-- <button type="button" class="btn btn-sm btn-danger btn-block" data-toggle="modal"
                            data-target="#modalestoque">
                            Em Estoque
                        </button> --}}
                         <a href="/produtos/detalhes/{{_id}}" class="btn-sm btn btn-primary btn-block ">  Verificar Opções</a>

                    </div>
                </div>
            </div>

        </div>
    </div>

    {{else}}

    <div class="mt-4 ml-4">
        <h5>Nenhum Produto Cadatrado no Sistema.</h5>
    </div>
    {{/each}}
</div>

<!-- Modal -->
<div class="modal fade" id="modalestoque{{id}}" tabindex="-1" role="dialog" aria-labelledby="labelmodalestoque"
    aria-hidden="true">

    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="labelmodalestoque">Em Estoque Temos</h5>
            </div>
            <div class="modal-body">
                <div class="col-md-12 table-responsive">
                    <table class="table table-striped">
                        <thead class="thead-dark">
                            <th scope="col">Cor</th>
                            <th scope="col">Tamanho</th>
                            <th scope="col">Estoque</th>
                            <th scope="col">Preço</th>
                        </thead>
                        <tbody>
                            {{#each produtos}}
                            <tr>

                                <td>{{nome_produto}}</td>
                                <td>{{tamanho}}</td>
                                <td>{{estoque}}</td>
                                <td>{{preco}}</td>
                            </tr>

                            {{else}}
                            <tr>
                                <td colspan="6">Apenas esse produto</td>
                            </tr>
                            {{/each}}
                        </tbody>
                </div>


            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
                <input type="hidden" name="id" value="{{_id}}">

            </div>
        </div>
    </div>
</div>



{{else}}


{{/if}}

