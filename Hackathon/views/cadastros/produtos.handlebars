<div class="row ">
    <div class="col-md-12 table-responsive ">
        <table class="table table-striped">
            <thead class="thead-dark">
                <th scope="col">Nome</th>
                <th scope="col">Categoria</th>
                <th scope="col">Cor</th>
                <th scope="col">Tamanho</th>
                <th scope="col">Estoque</th>
                <th scope="col">Pre√ßo</th>
            </thead>
            <tbody>
                {{#each produtos}}
                <tr>
                    <td>{{nome_produto}}</td>
                    <td>{{categoria}}</td>
                    <td>
                        {{#each descricao}}
                        <p> {{cor}} </p>
                        {{else}} {{/each}}
                    </td>
                     <td>
                        {{#each descricao}}
                        <p> {{tamanho}} </p>
                        {{else}} {{/each}}
                    </td>
                    <td>
                        {{#each descricao}}
                        <p> {{estoque}} </p>
                        {{else}} {{/each}}
                    </td>
                    <td>
                        {{#each descricao}}
                        <p> {{preco}} </p>
                        {{else}} {{/each}}
                    </td>
                </tr>
                {{else}}
                <tr>
                    <td colspan="7">
                        Nenhum Produto Cadastrado!
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</div>
